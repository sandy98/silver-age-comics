<div class="modal hide" style="width: 900pt; margin: -50px 0 0 -600px;">
  <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h5>{{ bareName }}</h5>
  </div>
  <div class="modal-body">
      <img id="page-show" width="100%" height="100%" src="page?page={{ currentPage }}&at={{ path }}" class="img-polaroid" />
  </div>
  <div class="modal-footer">
      <!--<a href="#" class="btn btn-cancel">Cancel</a>
      <a href="#" class="btn btn-primary btn-save">Save</a>-->
      <div class="pagination" style="font-size: smaller;">
          <ul>
              <li><a href="#">First</a></li>
              <li><a href="#">Prev</a></li>
              <!--<li class="divider">&nbsp; - &nbsp;</li>-->
              {{#each pageNumbers}}
                <li data-number="{{this.real}}"><a href="#">{{this.shown}}</a></li>
              {{/each}}
              <!--<li class="divider">&nbsp; - &nbsp;</li>-->
              <li><a href="#">Next</a></li>
              <li><a href="#">Last</a></li>
              <!--<li class="divider">&nbsp; - &nbsp;</li>-->
              <li><a href="#">+</a></li>
              <li><a href="#">-</a></li>
          </ul>
      </div>
  </div>
</div>